{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dictyy",
  "version": "0.2.0",
  "identifier": "com.hwuu.dictyy",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Dictyy",
        "width": 600,
        "height": 400,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "center": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/dict.db",
      "config.yaml.example"
    ]
  }
}
